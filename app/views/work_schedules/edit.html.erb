<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Edit Work Schedule</h1>
        <p class="text-gray-600 mt-1">Update your working hours and availability</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "View Schedule", work_schedule_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Back to Dashboard", dashboard_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Work Schedule Edit Form -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">Schedule Settings</h2>
      <p class="text-sm text-gray-600">Configure when you're available for work</p>
    </div>

    <%= form_with model: @work_schedule, local: true, class: "divide-y divide-gray-200" do |form| %>
      <div class="px-6 py-6 space-y-6">
        <!-- Time Settings -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <%= form.label :start_time, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.time_field :start_time, 
                value: @work_schedule.start_time&.strftime("%H:%M"),
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            <p class="text-xs text-gray-500 mt-1">When you start working each day</p>
          </div>

          <div>
            <%= form.label :end_time, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.time_field :end_time, 
                value: @work_schedule.end_time&.strftime("%H:%M"),
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            <p class="text-xs text-gray-500 mt-1">When you finish working each day</p>
          </div>

          <div>
            <%= form.label :timezone, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.select :timezone, 
                options_for_select([
                  ['Eastern Time (ET)', 'America/New_York'],
                  ['Central Time (CT)', 'America/Chicago'],
                  ['Mountain Time (MT)', 'America/Denver'],
                  ['Pacific Time (PT)', 'America/Los_Angeles'],
                  ['UTC', 'UTC'],
                  ['London (GMT)', 'Europe/London'],
                  ['Berlin (CET)', 'Europe/Berlin'],
                  ['Tokyo (JST)', 'Asia/Tokyo'],
                  ['Sydney (AEDT)', 'Australia/Sydney']
                ], @work_schedule.timezone || current_user&.timezone || 'America/New_York'),
                { prompt: 'Select timezone...' },
                { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
            <p class="text-xs text-gray-500 mt-1">Your local timezone</p>
          </div>
        </div>

        <!-- Work Days -->
        <div>
          <%= form.label :days_of_week, "Working Days", class: "block text-sm font-medium text-gray-900 mb-3" %>
          <p class="text-sm text-gray-600 mb-3">Select the days you typically work</p>
          <div class="grid grid-cols-2 md:grid-cols-7 gap-3">
            <% [
              ['monday', 'Mon'],
              ['tuesday', 'Tue'],
              ['wednesday', 'Wed'],
              ['thursday', 'Thu'],
              ['friday', 'Fri'],
              ['saturday', 'Sat'],
              ['sunday', 'Sun']
            ].each do |day, abbr| %>
              <div class="relative">
                <%= form.check_box :days_of_week, 
                    { multiple: true, class: "sr-only" }, 
                    day, 
                    nil %>
                <label for="work_schedule_days_of_week_<%= day %>" 
                       class="relative flex cursor-pointer rounded-lg border border-gray-300 bg-white p-3 shadow-sm focus:outline-none hover:bg-gray-50">
                  <div class="flex flex-1">
                    <div class="flex flex-col">
                      <span class="block text-sm font-medium text-gray-900 text-center"><%= abbr %></span>
                    </div>
                  </div>
                  <div class="ml-3 flex h-5 items-center">
                    <svg class="h-5 w-5 text-blue-600" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                </label>
              </div>
            <% end %>
          </div>
          <p class="text-xs text-gray-500 mt-2">Click to select/deselect working days</p>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <%= link_to "Cancel", work_schedule_path, 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <%= form.submit "Update Schedule", 
              class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Current Schedule Info -->
  <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-gray-800">Current Schedule Information</h3>
        <div class="mt-2 text-sm text-gray-700">
          <% if @work_schedule.persisted? %>
            <p><strong>Working Hours:</strong> <%= @work_schedule.work_hours %></p>
            <p><strong>Working Days:</strong> <%= @work_schedule.work_days_display %></p>
            <p><strong>Timezone:</strong> <%= @work_schedule.timezone %></p>
            <p><strong>Status:</strong> 
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= @work_schedule.working_now? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                <%= @work_schedule.working_now? ? 'Working Now' : 'Not Working' %>
              </span>
            </p>
          <% else %>
            <p>No work schedule configured yet. Set your preferences above.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Help Information -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">About Work Schedules</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p class="mb-2">Your work schedule helps the system:</p>
          <ul class="list-disc list-inside space-y-1">
            <li>Send notifications at appropriate times</li>
            <li>Show your availability status to team members</li>
            <li>Schedule ceremonies and reminders during work hours</li>
            <li>Calculate when you'll be working next</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Handle checkbox styling
  const checkboxes = document.querySelectorAll('input[type="checkbox"]');
  
  checkboxes.forEach(checkbox => {
    const label = checkbox.nextElementSibling;
    
    // Set initial state
    if (checkbox.checked) {
      label.classList.add('border-blue-500', 'bg-blue-50');
    }
    
    // Handle changes
    checkbox.addEventListener('change', function() {
      if (this.checked) {
        label.classList.add('border-blue-500', 'bg-blue-50');
        label.classList.remove('border-gray-300', 'bg-white');
      } else {
        label.classList.remove('border-blue-500', 'bg-blue-50');
        label.classList.add('border-gray-300', 'bg-white');
      }
    });
  });
});
</script>
