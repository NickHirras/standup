<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
          <span class="text-2xl font-medium text-gray-600"><%= @user.first_name[0] %></span>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Edit User</h1>
          <p class="text-gray-600 mt-1">Update details for <%= @user.full_name %></p>
        </div>
      </div>
      <div class="text-right">
        <%= link_to "Back to User", user_path(@user), 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- User Edit Form -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900">User Details</h2>
      <p class="text-sm text-gray-600">Modify the user information</p>
    </div>

    <%= form_with model: @user, local: true, class: "divide-y divide-gray-200" do |form| %>
      <div class="px-6 py-6 space-y-6">
        <!-- Basic Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :first_name, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.text_field :first_name, 
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "e.g., John" %>
          </div>

          <div>
            <%= form.label :last_name, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.text_field :last_name, 
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "e.g., Doe" %>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :email, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.email_field :email, 
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                placeholder: "e.g., john.doe@company.com" %>
          </div>

          <div>
            <%= form.label :role, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.select :role, 
                options_for_select([
                  ['Regular User', 'user'],
                  ['Administrator', 'admin']
                ], @user.role),
                { prompt: 'Select role...' },
                { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>
        </div>

        <!-- Preferences -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <%= form.label :timezone, class: "block text-sm font-medium text-gray-900 mb-2" %>
            <%= form.select :timezone, 
                options_for_select([
                  ['Eastern Time (ET)', 'America/New_York'],
                  ['Central Time (CT)', 'America/Chicago'],
                  ['Mountain Time (MT)', 'America/Denver'],
                  ['Pacific Time (PT)', 'America/Los_Angeles'],
                  ['UTC', 'UTC'],
                  ['London (GMT)', 'Europe/London'],
                  ['Berlin (CET)', 'Europe/Berlin'],
                  ['Tokyo (JST)', 'Asia/Tokyo'],
                  ['Sydney (AEDT)', 'Australia/Sydney']
                ], @user.timezone),
                { prompt: 'Select timezone...' },
                { class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } %>
          </div>

          <div>
            <%= form.label :notification_preferences, "Notification Preferences (JSON)", class: "block text-sm font-medium text-gray-900 mb-2" %>
            <p class="text-sm text-gray-600 mb-3">Optional JSON configuration for notifications</p>
            <%= form.text_area :notification_preferences, 
                value: @user.notification_preferences.present? ? @user.notification_preferences : '',
                rows: 4,
                class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm font-mono",
                placeholder: '{"email": true, "chat": true, "reminders": true}' %>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <%= link_to "Cancel", user_path(@user), 
              class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          
          <div class="flex space-x-3">
            <%= link_to "Delete User", user_path(@user), 
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this user? This action cannot be undone.' },
                class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
            
            <%= form.submit "Update User", 
                class: "inline-flex items-center px-6 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Current User Info -->
  <div class="bg-gray-50 border border-gray-200 rounded-lg p-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-gray-800">Current User Information</h3>
        <div class="mt-2 text-sm text-gray-700">
          <p><strong>Name:</strong> <%= @user.full_name %></p>
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Role:</strong> <%= @user.role.humanize %></p>
          <p><strong>Timezone:</strong> <%= @user.timezone.present? ? @user.timezone : 'Not set' %></p>
          <p><strong>Teams:</strong> <%= @user.teams.count %></p>
          <p><strong>Member Since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
        </div>
      </div>
    </div>
  </div>
</div>
