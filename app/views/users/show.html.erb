<div class="space-y-6">
  <!-- Page Header -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <div class="w-16 h-16 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
          <span class="text-2xl font-medium text-gray-600 dark:text-gray-300 dark:text-gray-300"><%= @user.first_name[0] %></span>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white dark:text-white"><%= @user.full_name %></h1>
          <p class="text-gray-600 dark:text-gray-300 dark:text-gray-300 mt-1"><%= @user.email %></p>
          <div class="mt-2 flex items-center space-x-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
              <%= @user.role.humanize %>
            </span>
            <span class="text-sm text-gray-500 dark:text-gray-400 dark:text-gray-400">• <%= @user.teams.count %> teams</span>
          </div>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Back to Users", users_path, 
            class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <%= link_to "Edit User", edit_user_path(@user), 
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  </div>

  <!-- User Statistics -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-blue-100 dark:bg-blue-900 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white dark:text-white">Teams</h3>
          <p class="text-2xl font-bold text-blue-600 dark:text-blue-400"><%= @teams.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white">Recent Responses</h3>
          <p class="text-2xl font-bold text-green-600"><%= @recent_responses.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-gray-900 dark:text-white">Work Schedule</h3>
          <p class="text-2xl font-bold text-purple-600"><%= @work_schedule ? 'Set' : 'Not Set' %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- User Details -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white">User Details</h2>
      <p class="text-sm text-gray-600 dark:text-gray-300">Personal information and preferences</p>
    </div>
    <div class="px-6 py-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Personal Information</h3>
          <div class="space-y-2 text-sm text-gray-700">
            <p><strong>First Name:</strong> <%= @user.first_name %></p>
            <p><strong>Last Name:</strong> <%= @user.last_name %></p>
            <p><strong>Email:</strong> <%= @user.email %></p>
            <p><strong>Role:</strong> <%= @user.role.humanize %></p>
            <p><strong>Timezone:</strong> <%= @user.timezone.present? ? @user.timezone : 'Not set' %></p>
          </div>
        </div>
        
        <div>
          <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Account Information</h3>
          <div class="space-y-2 text-sm text-gray-700">
            <p><strong>Member Since:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
            <p><strong>Last Updated:</strong> <%= @user.updated_at.strftime("%B %d, %Y") %></p>
            <p><strong>Company:</strong> <%= @user.company.name %></p>
          </div>
        </div>
      </div>
      
      <% if @user.notification_preferences.present? %>
        <div class="mt-6">
          <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Notification Preferences</h3>
          <div class="bg-gray-50 rounded-md p-3">
            <pre class="text-xs text-gray-700 overflow-x-auto"><%= JSON.pretty_generate(@user.notification_preferences_hash) %></pre>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Work Schedule -->
  <% if @work_schedule %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-lg font-medium text-gray-900 dark:text-white">Work Schedule</h2>
            <p class="text-sm text-gray-600 dark:text-gray-300">Configured working hours and days</p>
          </div>
          <%= link_to "Edit Schedule", edit_work_schedule_path, 
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
      <div class="px-6 py-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Working Hours</h3>
            <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @work_schedule.work_hours %></p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Working Days</h3>
            <p class="text-lg font-semibold text-gray-900 dark:text-white"><%= @work_schedule.work_days_display %></p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Current Status</h3>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @work_schedule.working_now? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
              <%= @work_schedule.working_now? ? 'Working Now' : 'Not Working' %>
            </span>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 text-center">
      <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">No work schedule set</h3>
      <p class="text-gray-600 dark:text-gray-300 mb-4">This user hasn't configured their working hours yet.</p>
      <%= link_to "Set Work Schedule", new_work_schedule_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <!-- Teams Section -->
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
    <div class="px-6 py-4 border-b border-gray-200">
      <h2 class="text-lg font-medium text-gray-900 dark:text-white">Teams</h2>
      <p class="text-sm text-gray-600 dark:text-gray-300">Teams this user belongs to</p>
    </div>
    
    <% if @teams.any? %>
      <div class="divide-y divide-gray-200">
        <% @teams.each do |team| %>
          <div class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div>
                <h3 class="text-sm font-medium text-gray-900 dark:text-white"><%= team.name %></h3>
                <% if team.description.present? %>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mt-1"><%= team.description %></p>
                <% end %>
                <div class="mt-2 flex items-center space-x-4 text-xs text-gray-500 dark:text-gray-400">
                  <span><%= team.users.count %> members</span>
                  <span><%= team.ceremonies.count %> ceremonies</span>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    <%= @user.team_memberships.find_by(team: team).role.humanize %>
                  </span>
                </div>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View Team", team_path(team), 
                    class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="px-6 py-8 text-center">
        <p class="text-sm text-gray-500 dark:text-gray-400">This user is not a member of any teams yet.</p>
      </div>
    <% end %>
  </div>

  <!-- Recent Activity -->
  <% if @recent_responses.any? %>
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Recent Activity</h2>
        <p class="text-sm text-gray-600 dark:text-gray-300">Latest responses and participation</p>
      </div>
      
      <div class="divide-y divide-gray-200">
        <% @recent_responses.each do |response| %>
          <div class="px-6 py-4">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <span class="text-sm font-medium text-blue-600"><%= response.ceremony.name[0] %></span>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 dark:text-white">
                  Responded to "<%= response.question.question_text %>"
                </p>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                  <%= response.ceremony.name %> • <%= response.ceremony.team.name %> • <%= time_ago_in_words(response.submitted_at) %> ago
                </p>
                <div class="mt-2 text-sm text-gray-700">
                  <strong>Answer:</strong> <%= response.formatted_answer %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
